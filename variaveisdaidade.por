programa {
  funcao inicio() {
    //Algoritmo para exibir nome e idade

    //Declaração de variáveis
    cadeia nome
    inteiro idade
    real altura

    //Atribuição de variáveis com o comando leia()
    escreva("\nDigite o seu nome: ")
